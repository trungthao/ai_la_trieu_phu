<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsh">

    <RelativeLayout
        android:id="@+id/rl_thoi_gian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/thoigian">

        <TextView
            android:id="@+id/tv_thoi_gian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tro_giup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_nam_muoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nammuoi" />

        <ImageView
            android:id="@+id/iv_khan_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_nam_muoi"
            android:src="@drawable/hoikhangia" />

        <ImageView
            android:id="@+id/iv_nguoi_than"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_khan_gia"
            android:src="@drawable/nguoithan" />

        <ImageView
            android:id="@+id/iv_doi_cau_hoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_nguoi_than"
            android:src="@drawable/doicauhoi" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tro_giup"
        android:layout_toLeftOf="@+id/ln_xep_hang"
        android:layout_toRightOf="@+id/iv_suy_luan"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rl_cau_hoi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/question">

